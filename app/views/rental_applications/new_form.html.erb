<h2> Tell us why you are interested in this apartment:</h2>

<% if @errors %>
    <% @errors.each do |error|%>
        <div style="color:red"><%= error %></div>
    <% end %>
<% end %>

<%= form_for @rental_application do |f| %>
    <%= f.hidden_field :apartment_id, value: @apartment.id %>
    <%= f.label :description, "Description:"%><br>
    <%= f.text_area :description, cols: "40", rows: "7" %>
    <br>
    <br>
    <%= f.submit "Submit", ({:class => "btn btn-outline-primary"}) %>
<% end %>