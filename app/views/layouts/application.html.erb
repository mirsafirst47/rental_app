
<div class="card bg-dark text-white">
  <img class="card-img" src="https://images.unsplash.com/photo-1594072702031-f0e2a602dd2c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="Card image">
  <div class="card-img-overlay">

      <% if check_if_tenant_is_logged_in? %>
        <nav>
          LOGGED IN: <%= @current_tenant.name %> 
          <%= button_to "LOG OUT", logout_path, :class => 'btn btn-outline-warning', method: :delete %>
        </nav>
      <% else %>
        <nav> 
          <%= link_to "LOGIN PAGE", login_path %>
        </nav>
      <% end %>
      <%= yield %>
  </div>
</div>

<!DOCTYPE html>
  <html>
    <head>
      <title>RentalApp</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
</html>

